{
  "id": "solvapay",
  "name": "SolvaPay",
  "description": "Payment management tools powered by the SolvaPay MCP server. Manage customers, products, plans, purchases, payments, usage tracking, and transactions through chat.",
  "version": "1.0.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "apiKey": {
        "type": "string",
        "description": "SolvaPay API key (starts with sk_sandbox_ or sk_live_)"
      },
      "endpoint": {
        "type": "string",
        "default": "https://mcp.solvapay.com/mcp",
        "description": "SolvaPay MCP server endpoint URL"
      }
    },
    "required": ["apiKey"]
  },
  "uiHints": {
    "apiKey": {
      "label": "API Key",
      "sensitive": true,
      "placeholder": "sk_sandbox_..."
    },
    "endpoint": {
      "label": "MCP Endpoint",
      "placeholder": "https://mcp.solvapay.com/mcp"
    }
  },
  "skills": ["skills"]
}
